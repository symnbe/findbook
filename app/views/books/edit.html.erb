<div class="container">
  <div class="row pt-5">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
    <h1>Editing Book</h1>
      <%= form_with model:@book, lacal:true do |f| %>

        <div class="form-group">
          <%= f.label:Title  %>
          <%= f.text_field:title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label:opinion %>
          <%= f.text_area:opinion, class: "form-control" %>
        </div>

        <div="form-group">
          <%= f.submit "Update Book", class: "btn btn-success mt-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>