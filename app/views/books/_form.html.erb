<%= form_with model:book, local:true %>

<div class="form_group">
  <%= f.label :title %>
  <%= f.text_field:title, class: "form-control book_title" %>
</div>

<div class="form_group">
  <%= f.label :opinion %>
  <%= f.text_area:opinion, class: "form-control book-opinion" %>
</div>

<div class="form_group">
  <%= f.submit class: "btn btn-success" %>
</div
<% end %>